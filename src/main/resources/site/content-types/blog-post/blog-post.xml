<?xml version="1.0" encoding="UTF-8"?>
<content-type>
    <display-name>Blog post</display-name>
    <super-type>base:structured</super-type>
    <form>
        <input type="ImageSelector" name="image">
            <label>Blog head</label>
            <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="TextLine" name="alt-text">
            <label>Image alternative text</label>
            <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="HtmlArea"  name="content">
            <label>Blog text</label>
            <occurences minimum="1" maximum="1" />
        </input>
        <input type="TextArea" name="overviewText">
            <label>Blog post overview text</label>
            <max-length>500</max-length>
            <occurences minimum="1" maximum="1" />
        </input>
    </form>
</content-type>
